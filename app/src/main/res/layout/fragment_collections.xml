<?xml version="1.0" encoding="utf-8"?><!-- res/layout/fragment_collections.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarCollections"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:theme="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/collections" />

    <!-- Quick "Favorites, Trash, Archive" buttons or layout -->
    <LinearLayout
        android:id="@+id/collectionsTopContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarCollections">

        <!-- Example of multiple quick collections -->
        <Button
            android:id="@+id/buttonFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorites" />

        <Button
            android:id="@+id/buttonTrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trash" />

        <Button
            android:id="@+id/buttonArchive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/archive" />
    </LinearLayout>

    <!-- RecyclerView or list of user albums -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllAlbums"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collectionsTopContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>
