<!-- res/drawable/thumb_shape.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Bo góc cho thumb -->
    <corners android:radius="8dp" />
    <!-- Màu của thumb -->
    <solid android:color="#009688" />
    <!-- Border cho thumb -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />
    <!-- Kích thước thumb -->
    <size
        android:width="16dp"
        android:height="24dp" />
</shape>